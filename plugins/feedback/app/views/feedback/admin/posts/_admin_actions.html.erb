<% if post.status_new? %>
  <%= button_to "open", open_admin_post_path(post), class: "feedback--button-to" %>
  <%= button_to "close", close_admin_post_path(post), class: "feedback--button-to" %>
  <%= button_to "complete", complete_admin_post_path(post), class: "feedback--button-to" %>
<% elsif post.status_open? %>
  <%= button_to "close", close_admin_post_path(post), class: "feedback--button-to" %>
  <%= button_to "complete", complete_admin_post_path(post), class: "feedback--button-to" %>
<% elsif post.status_closed? || post.status_completed? %>
  <%= button_to "reopen", reopen_admin_post_path(post), class: "feedback--button-to" %>
<% end %>
